.site-branding {
	display: flex;
	align-items: center;

	&__logo {

		.custom-logo {
			display: block;
			margin-inline-end: $gutter;
			max-width: 32px;
			@media $small-up {
				max-width: 32px;
			}
			@media $medium-up {
				max-width: 48px;
			}

		}

	}

	&__name {
		font-size: 1em
		color: currentColor;
		flex-grow: 1;
		margin 0;
		font-weight:bold;
		text-align: left;

		a {
			color: inherit
		}
	}

}